

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

@SuppressWarnings("serial")
public class Acceuil extends JFrame implements ActionListener {

	protected static JFrame f=new JFrame();
	protected static Container c=f.getContentPane();

	public Acceuil(){
		JFrame f=new JFrame();
		Container c=f.getContentPane();
		c.setLayout(new BorderLayout());
		Image wall=f.getToolkit().getImage(getClass().getResource("/ruban.jpg"));
		Icon i1=new ImageIcon(wall);
		JLabel j1=new JLabel(i1);
		c.add(j1,BorderLayout.NORTH);
		Image wallp=f.getToolkit().getImage(getClass().getResource("ruban.jpg/"));
		Icon i=new ImageIcon(wallp);
		JLabel j=new JLabel(i);
		JButton bu=(new JButton("Cliquez ici pour commencer"));
		ActionListener listener=new BoutonAcceuil();
		bu.addActionListener(listener);
		c.add(j,BorderLayout.CENTER);
		JPanel toto=new JPanel();
		Dimension d1=new Dimension(10,30);
		toto.setPreferredSize(d1);
		toto.add(bu);
		JPanel tata=new JPanel();
		tata.add(toto);
		c.add(toto,BorderLayout.SOUTH);
		f.setTitle("");
		f.pack();
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		f.setVisible(true);
		f.setResizable(false);
	}
	
	public static void main(String [] args){
		new Acceuil();
	}


	@Override
	public void actionPerformed(ActionEvent arg0) {
		// TODO Auto-generated method stub

	}

}